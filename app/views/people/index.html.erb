<div id="header">
  <div class="container">
    <div class="row">
      <div class="span12">
        <h1>Candidati</h1>
      </div>
    </div>
  </div>
</div>

<div id="content">
  <div class="container">
    <div class="row">
      <div class="span12">
        <table>
          <thead>
          <tr>
            <th>Status</th>
            <th>Name</th>
            <th>Picture url</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @people.each do |person| %>
              <tr>
                <td><%= person.status %></td>
                <td><%= person.name %></td>
                <td><%= person.picture_url %></td>
                <td><%= link_to 'Show', person %></td>
                <td><%= link_to 'Edit', edit_person_path(person) %></td>
                <td><%= link_to 'Destroy', person, method: :delete, data: {confirm: 'Are you sure?'} %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <br>

        <%= link_to 'New Person', new_person_path %>

      </div>
    </div>
  </div>
</div>


