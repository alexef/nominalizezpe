<h1>Propuneri</h1>

<table class="table moderator_datatable">
  <thead>
  <tr>
    <th>Propus de</th>
    <th>Nume</th>
    <th>Propus la data</th>
    <th>Status</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @people.each do |person| %>
      <tr>
        <td><%= person.user.name %></td>
        <td>
          <img src="<%= person.picture_url %>" width="40" height="40" />
          <%= person.name %>
        </td>
        <td><%= person.created_at %></td>
        <td><%= person.status %></td>
        <td>
          <a href="<%= person_path :id => person.id %>">view</a> |
          <a href="<%= edit_person_path :id => person.id %>">edit</a> |
          <a href="<%= make_ok_path :id => person.id %>">ok</a> |
          <a href="<%= make_reject_path :id => person.id %>">rej</a> |
          <a href="<%= make_new_path :id => person.id %>">new</a> |
          <%= link_to 'delete', person, method: :delete, data: {confirm: 'Esti sigur ca il stergi de tot? Nu vrei doar sa ii dai reject?'}  %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>